<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookClub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookClub.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Книжный клуб</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Каталог
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="Fantasy">Фэнтези</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="Detective">Детектив</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="ScientificLiterature">Научная литература</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="History">История</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="Biography">Биография</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="Drama">Драма</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="ActionMovie">Боевик</a></li>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="ListBook" asp-route-value="Psychology">Психология</a></li>
                                <li><hr class="dropdown-divider"></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="AddBook">Добавить книгу</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Добавить книгу</a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUsView">О Нас</a>
                        </li>
                    </ul>

                </div>
                <ul class="nav justify-content-end">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="AdminPage">Админ меню</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page">Привет: @User.Identity.Name</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="UserPage">Профиль</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="Logout">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="UserRegistration">Зарегестрироваться</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="Login">Войти</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
