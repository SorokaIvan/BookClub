<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Книжный Клуб</title>
    <link rel="icon" type="image/png" href="~/css/notebook.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookClub.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Книжный клуб</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Каталог Книг
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="All">Все книги</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Фентези">Фэнтези</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Детектив">Детектив</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Научная литература">Научная литература</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="История">История</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Биография">Биография</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Драма">Драма</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Боевик">Боевик</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="ListBook" asp-route-value="Психология">Психология</a></li>
                                <li><hr class="dropdown-divider"></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="AddBook">Добавить книгу</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Добавить книгу</a></li>
                                }
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Каталог Фильмов
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="All">Все фильмы и сериалы</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Аниме">Аниме</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Боевик">Боевик</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Вестерн">Вестерн</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Детектив">Детектив</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Документальный">Документальный</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Драма">Драма</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Исторический">Исторический</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Комедия">Комедия</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Короткометражный">Короткометражный</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Криминал">Криминал</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Мелодрама">Мелодрама</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Мультфильм">Мультфильм</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Научный">Научный</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Приключения">Приключения</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Семейный">Семейный</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Триллер">Триллер</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Ужасы">Ужасы</a></li>
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="ListMovies" asp-route-value="Фантастика">Фантастика</a></li>
                                <li><hr class="dropdown-divider"></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-controller="Movies" asp-action="AddMovie">Добавить фильм / сериал</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Добавить фильм / сериал</a></li>
                                }
                            </ul>
                        </li>








                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUsView">О Нас</a>
                        </li>
                    </ul>

                </div>
                <ul class="nav justify-content-end">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="AdminPage" asp-action="AdminPage">Админ меню</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page">Привет: @User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="UserPage" asp-action="UserPageView">Профиль</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="Logout">Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="UserRegistration">Зарегистрироваться</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="Login">Войти</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
