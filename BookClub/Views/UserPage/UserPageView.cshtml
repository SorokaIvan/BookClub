@model List<BookModel>
@{
    ViewData["Title"] = "UserPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="position-block">
    <h1>Мой Профиль</h1>
    <br>
    <div class="btn-group dropend">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Мои книги:
        </button>
        <ul class="dropdown-menu">
            @if (Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <li>
                        <div style="white-space: nowrap;">
                            <h3>Название книги: <b><u>@item.TitleBook</u></b> Автор: <b><u>@item.Author</u></b></h3>
                        </div>
                        @*<a class="btn btn-primary btn-sm" role="button" asp-controller="UserPage" asp-action="EditBook" asp-route-tetileBook="@item.TitleBook">Редактировать</a>*@
                        <a class="btn btn-primary btn-sm" role="button" asp-controller="UserPage" asp-action="DeleteBook" asp-route-tetileBook="@item.TitleBook">Удалить</a>
                    </li>
                    <br>
                }
            }
            else
            {
                <li>
                    <div style="white-space: nowrap;">
                        <h3>Вы не добавиляли книги!</h3>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>


